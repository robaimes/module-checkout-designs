        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="aimesConfig" xsi:type="object">Aimes\CheckoutLayout\Model\Checkout\ConfigProvider</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Checkout\Block\Onepage">
